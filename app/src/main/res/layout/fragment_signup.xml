<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/signupScroll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <ImageView
            android:id="@+id/imgWelcome"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:contentDescription="Welcome Illustration"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_pet_welcome"
            android:layout_marginHorizontal="100dp"

            />

        <TextView
            android:id="@+id/signupTitle"
            style="@style/TextBold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Create Account"
            android:textColor="@color/textDark"
            android:textSize="28sp" />

        <TextView
            android:id="@+id/signupSubtitle"
            style="@style/TextRegular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:text="Fill the form to continue"
            android:textColor="@color/textMedium"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/signupName"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@drawable/edittext_bg"
            android:hint="Full Name"
            android:inputType="textPersonName"
            android:maxLines="1"
            android:singleLine="true"
            android:padding="16dp"
            android:textColor="@color/textDark"
            android:textColorHint="@color/textLight" />

        <EditText
            android:id="@+id/signupEmail"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginTop="14dp"
            android:background="@drawable/edittext_bg"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:maxLines="1"
            android:singleLine="true"
            android:padding="16dp"
            android:textColor="@color/textDark"
            android:textColorHint="@color/textLight" />

        <EditText
            android:id="@+id/signupPassword"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginTop="14dp"
            android:background="@drawable/edittext_bg"
            android:hint="Password"
            android:inputType="textPassword"
            android:maxLines="1"
            android:singleLine="true"
            android:padding="16dp"
            android:textColor="@color/textDark"
            android:textColorHint="@color/textLight" />

        <EditText
            android:id="@+id/signupConfirmPassword"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginTop="14dp"
            android:background="@drawable/edittext_bg"
            android:hint="Confirm Password"
            android:inputType="textPassword"
            android:maxLines="1"
            android:singleLine="true"
            android:padding="16dp"
            android:textColor="@color/textDark"
            android:textColorHint="@color/textLight" />

        <TextView
            android:id="@+id/tvPasswordHint"
            style="@style/TextRegular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Password must be at least 8 characters and contain a number and a special character."
            android:textColor="@color/textMedium"
            android:textSize="12sp" />

        <Button
            android:id="@+id/btnSignup"
            style="@style/TextMedium"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginTop="22dp"
            android:backgroundTint="@color/primary"
            android:text="Sign Up"
            android:textColor="@color/background"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/signupToLogin"
            style="@style/TextRegular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:text="Already have an account? Login"
            android:textColor="@color/primary"
            android:textSize="14sp" />

    </LinearLayout>

</ScrollView>